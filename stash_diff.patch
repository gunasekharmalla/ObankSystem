+        </div>
+
+        <div>
+          <label>Height (in cm):</label>
+          <input
+            type="number"
+            name="height"
+            value={formData.height}
+            onChange={handleChange}
+            required
+          />
+        </div>
+
+        <div>
+          <label>Weight (in kg):</label>
+          <input
+            type="number"
+            name="weight"
+            value={formData.weight}
+            onChange={handleChange}
+            required
+          />
+        </div>
+
+        <div>
+          <label>Previous Diseases (if any):</label>
